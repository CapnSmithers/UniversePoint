<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.mines.msmith1.universepoint"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.mines.msmith1.universepoint.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.mines.msmith1.universepoint.GameRunner"
            android:label="@string/title_activity_new_game" 
            android:configChanges="orientation|screenSize" >
        </activity>
        <activity
            android:name="edu.mines.msmith1.universepoint.ScoreSummary"
            android:label="@string/title_activity_score_summary" >
        </activity>
        <activity
            android:name="edu.mines.msmith1.universepoint.EditTeams"
            android:label="@string/title_activity_edit_teams" >
        </activity>
        <activity
            android:name="edu.mines.msmith1.universepoint.EditPlayers"
            android:label="@string/title_activity_edit_players" >
        </activity>
        <activity
            android:name="edu.mines.msmith1.universepoint.PlayerView"
            android:label="@string/title_activity_player_view" >
        </activity>
        <activity
            android:name="edu.mines.msmith1.universepoint.EditGames"
            android:label="@string/title_activity_edit_games" >
        </activity>
        <activity
            android:name="edut.mines.msmith1.universepoint.EditGame"
            android:label="@string/title_activity_edit_game" >
        </activity>
    </application>

</manifest>
